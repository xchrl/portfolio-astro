---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import ToolItem from "@/components/ToolItem.astro";
import { items } from "@/data/aboutItems.ts";

const { type, name, description } = Astro.props;
const itemType = items[type];
---

<Card>
  <CardHeader>
    <CardTitle><h3>{name}</h3></CardTitle>
    {description && <CardDescription>{description}</CardDescription>}
  </CardHeader>
  <CardContent>
    <ul class="flex flex-wrap justify-center md:justify-start gap-2">
      {
        Object.entries(itemType).map(([key]) => (
          <li>
            <ToolItem type={type} name={key} />
          </li>
        ))
      }
    </ul>
  </CardContent>
</Card>
