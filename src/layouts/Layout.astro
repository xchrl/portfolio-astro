---
import Navbar from "@/components/Navbar.astro";
import "../styles/global.css";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>xchrl | portfolio</title>
  </head>
  <body class="dark font-display">
    <header class="w-full bg-sidebar">
      <Navbar />
    </header>
    <main class="container mx-auto px-4 lg:px-48 py-8 flex flex-col gap-8">
      <slot />
    </main>
    <footer class="w-full py-4 border-t-sidebar border-2">
      <Footer />
    </footer>
