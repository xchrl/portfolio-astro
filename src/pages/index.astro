---
import Layout from "../layouts/Layout.astro";
import {
  FaTwitter,
  FaGithub,
  FaRegClock,
  FaSteam,
  FaDiscord,
} from "react-icons/fa";
import { IoMdMail } from "react-icons/io";
import { GrLocation } from "react-icons/gr";
import Clock from "@/components/Clock";
import ProjectCard from "@/components/ProjectCard";
import { BsPerson } from "react-icons/bs";
import { Separator } from "@/components/ui/separator";

const contactInfo = [
  {
    type: "x (fka twitter)",
    name: "@_xchrl",
    link: "https://twitter.com/@_xchrl",
    Icon: FaTwitter,
  },
  {
    type: "steam",
    name: "mr ekk",
    link: "https://steamcommunity.com/profiles/76561198439465473/",
    Icon: FaSteam,
  },
  {
    type: "github",
    name: "xchrl",
    link: "https://github.com/xchrl",
    Icon: FaGithub,
  },
  {
    type: "email",
    name: "michalbronicki85@gmail.com",
    link: "mailto:michalbronicki85@gmail.com",
    Icon: IoMdMail,
  },
];
---

<Layout>
  <div class="flex flex-col gap-2 md:gap-8 text-center md:text-start">
    <div>
      <h1>
        ðŸ‘‹ hey hey, i'm <span class="text-accent">charlie</span>!
      </h1>
      <h4 class="text-muted-foreground">front-end dev</h4>
    </div>
    <div>
      <p>
        i'm a self-taught front-end developer that's incredibly passionate about
        programming and ui development.
      </p>
      <p>
        i'm also really into gaming (especially gacha games), esports (mainly
        counter strike and rocket league), a little bit of speedcubing and
        keyboard modding.
      </p>
    </div>
    <div
      class="flex flex-col lg:flex-row items-center justify-center gap-4 lg:gap-8 text-sm"
    >
      <div class="flex flex-row items-center gap-3">
        <div class="border border-accent p-2 rounded-sm">
          <BsPerson />
        </div>
        <span>he/him</span>
      </div>
      <div class="flex flex-row items-center gap-3">
        <div class="border border-accent p-2 rounded-sm">
          <GrLocation />
        </div>
        <span>przemyÅ›l, poland</span>
      </div>
      <div class="flex flex-row items-center gap-3">
        <div class="border border-accent p-2 rounded-sm">
          <FaRegClock />
        </div>
        <Clock client:load />
      </div>
      <span
        class="bg-green-600/20 px-4 py-2 border border-green-600 rounded-md lg:ml-auto text-center"
      >
        available for internships/work/commissions
      </span>
    </div>
  </div>
  <Separator />
  <div class="flex flex-col gap-4 text-center md:text-start">
    <h2>you can find me on social media:</h2>
    <ul class="flex gap-4 flex-col">
      <li class="flex flex-col md:flex-row gap-2 items-center justify-between">
        <div class="flex items-center gap-3 text-xl">
          <FaDiscord />
          <h4>discord</h4>
        </div>
        <iframe
          title="Discord user embed"
          width="340"
          height="72"
          sandbox="allow-scripts"
          src="https://widgets.vendicated.dev/user?id=329597208494211073&theme=dark&banner=false&full-banner=false&rounded-corners=true&discord-icon=true&badges=false&guess-nitro=false&"
          class="hover:scale-110 duration-150 self-center md:self-start"
        ></iframe>
      </li>
      {
        contactInfo.map(({ type, name, link, Icon }) => (
          <li class="flex flex-col md:flex-row gap-2 items-center justify-between">
            <div class="flex items-center gap-3 text-xl">
              <Icon />
              <h4>{type}</h4>
            </div>
            <a
              href={link}
              class="px-3 rounded-full bg-muted border border-accent/40 hover:text-background hover:bg-accent hover:scale-110 duration-150"
              target="_blank"
            >
              {name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <Separator />
  <div class="flex flex-col gap-4">
    <h2 class="text-center md:text-start">
      here's some of the <span class="text-accent">projects</span> i've worked on:
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
      <ProjectCard client:load />
    </div>
  </div>
</Layout>
