        <ul class="flex gap-4 flex-col">
          {
            contactInfo.map(({ type, name, link, Icon }) => (
              <li class="flex items-center justify-between">
                <div class="flex items-center gap-3 text-xl">
                  <Icon />
                  <h3>{type}</h3>
                </div>
                <a
                  href={link}
                  class="px-3 rounded-full bg-muted hover:text-accent duration-150"
                  target="_blank"
